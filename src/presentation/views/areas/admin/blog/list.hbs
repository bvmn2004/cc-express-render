<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Blog List</h1>
    <a href="/admin/blogs/create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        + New Blog
    </a>
</div>

<table class="w-full border border-gray-300 bg-white shadow rounded">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-4 py-2 border">ID</th>
            <th class="px-4 py-2 border">Title</th>
            <th class="px-4 py-2 border">Product</th>
            <th class="px-4 py-2 border">Image</th>
            <th class="px-4 py-2 border">Date</th>
            <th class="px-4 py-2 border">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each blogs}}
        <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 border">{{inc @index}}</td>
            <td class="px-4 py-2 border font-semibold">{{this.title}}</td>
            <td class="px-4 py-2 border">
                {{#if this.product_name}}
                    {{this.product_name}}
                {{else}}
                    <span class="text-gray-400">No product</span>
                {{/if}}
            </td>
            <td class="px-4 py-2 border">
                {{#if this.product_image_url}}
                    <img src="{{this.product_image_url}}" alt="{{this.product_name}}" class="w-16 h-16 object-cover rounded">
                {{else}}
                    <span class="text-gray-400">No image</span>
                {{/if}}
            </td>
            <td class="px-4 py-2 border">{{this.created_at}}</td>
            <td class="px-4 py-2 border">
                <div class="flex flex-col gap-2">
                    <a href="/admin/blogs/{{this.id}}/edit"
                        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 text-sm font-medium text-center transition-colors">
                        Edit
                    </a>
                    <form action="/admin/blogs/{{this.id}}?_method=DELETE" method="POST" class="inline">
                        <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 cursor-pointer text-sm font-medium transition-colors"
                            onclick="return confirm('Are you sure you want to delete this blog?')">
                            Delete
                        </button>
                    </form>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
