<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Product List</h1>
    <a href="/admin/products/create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        + New Product
    </a>
</div>

<table class="w-full border border-gray-300 bg-white shadow rounded">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-4 py-2 border">ID</th>
            <th class="px-4 py-2 border">Name</th>
            <th class="px-4 py-2 border">Category</th>
            <th class="px-4 py-2 border">Price</th>
            <th class="px-4 py-2 border">Stock</th>
            <th class="px-4 py-2 border">Image</th>
            <th class="px-4 py-2 border">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 border">{{this.id}}</td>
            <td class="px-4 py-2 border">{{this.name}}</td>
            <td class="px-4 py-2 border">{{this.category_name}}</td>
            <td class="px-4 py-2 border">{{this.price}}</td>
            <td class="px-4 py-2 border">{{this.stock_quantity}}</td>
            <td class="px-4 py-2 border">
                {{#if this.image_url}}
                <img src="{{this.image_url}}" alt="{{this.name}}" class="w-16 h-16 object-cover rounded">
                {{else}}
                <span class="text-gray-400">No image</span>
                {{/if}}
            </td>
            <td class="px-4 py-2 border space-x-2">
                <a href="/admin/products/{{this.id}}/edit"
                    class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">
                    Edit
                </a>
                <form action="/admin/products/{{this.id}}?_method=DELETE" method="POST" class="inline">
                    <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 cursor-pointer"
                        onclick="return confirm('Are you sure you want to delete this product?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>