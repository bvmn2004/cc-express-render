<h1 class="text-2xl font-bold mb-6">Edit Category</h1>

<form action="/admin/categories/{{category.id}}/update" method="POST" class="space-y-4">
    <div>
        <label class="block mb-1 font-medium">Name</label>
        <input type="text" name="name" value="{{category.name}}" class="w-full border rounded px-3 py-2" required>
    </div>

    <div class="flex items-center justify-between">
        <a href="/admin/categories" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">
            Back
        </a>
        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 cursor-pointer">
            Update
        </button>
    </div>
</form>