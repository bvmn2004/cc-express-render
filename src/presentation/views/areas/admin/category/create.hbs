<h1 class="text-2xl font-bold mb-6">Create Category</h1>

<form action="/admin/categories/create" method="POST" class="space-y-4">
    <div>
        <label class="block mb-1 font-medium">Name</label>
        <input type="text" name="name" class="w-full border rounded px-3 py-2" required>
    </div>
    <div class="flex items-center justify-between">
        <a href="/admin/categories" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">
            Back
        </a>

        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer">
            Save
        </button>
    </div>
</form>