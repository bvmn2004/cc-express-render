<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Order List</h1>
</div>

{{#if orders.length}}
<table class="w-full border border-gray-300 bg-white shadow rounded">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-4 py-2 border">Order ID</th>
            <th class="px-4 py-2 border">Customer</th>
            <th class="px-4 py-2 border">Items</th>
            <th class="px-4 py-2 border">Total Amount</th>
            <th class="px-4 py-2 border">Status</th>
            <th class="px-4 py-2 border">Date</th>
            <th class="px-4 py-2 border">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 border">#{{this.id}}</td>
            <td class="px-4 py-2 border">
                {{#if this.user_name}}
                    <div>{{this.user_name}}</div>
                    <div class="text-sm text-gray-500">{{this.user_email}}</div>
                {{else}}
                    <span class="text-gray-500">Guest</span>
                {{/if}}
            </td>
            <td class="px-4 py-2 border">{{this.item_count}} item(s)</td>
            <td class="px-4 py-2 border font-semibold">${{formatCurrency this.total_amount}}</td>
            <td class="px-4 py-2 border">
                <span class="px-2 py-1 rounded text-sm
                    {{#if (eq this.status 'pending')}}bg-yellow-100 text-yellow-800{{/if}}
                    {{#if (eq this.status 'processing')}}bg-blue-100 text-blue-800{{/if}}
                    {{#if (eq this.status 'shipped')}}bg-purple-100 text-purple-800{{/if}}
                    {{#if (eq this.status 'delivered')}}bg-green-100 text-green-800{{/if}}
                    {{#if (eq this.status 'cancelled')}}bg-red-100 text-red-800{{/if}}">
                    {{this.status}}
                </span>
            </td>
            <td class="px-4 py-2 border">{{this.created_at}}</td>
            <td class="px-4 py-2 border space-x-2">
                <a href="/admin/orders/{{this.id}}"
                    class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">
                    View
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="bg-white border border-gray-300 rounded p-8 text-center">
    <p class="text-gray-500">No orders found</p>
</div>
{{/if}}

