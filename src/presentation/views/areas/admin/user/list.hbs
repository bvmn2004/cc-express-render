<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Users</h1>
    <a href="/admin/users/create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        + New User
    </a>
</div>

<table class="w-full border border-gray-300 bg-white shadow rounded">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-4 py-2 border">ID</th>
            <th class="px-4 py-2 border">Full name</th>
            <th class="px-4 py-2 border">Email</th>
            <th class="px-4 py-2 border">Role</th>
            <th class="px-4 py-2 border">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 border">{{this.id}}</td>
            <td class="px-4 py-2 border">{{this.full_name}}</td>
            <td class="px-4 py-2 border">{{this.email}}</td>
            <td class="px-4 py-2 border">{{this.role}}</td>
            <td class="px-4 py-2 border space-x-2">
                <a href="/admin/users/{{this.id}}/edit" class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">Edit</a>
                <form action="/admin/users/{{this.id}}/delete" method="POST" class="inline">
                    <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 cursor-pointer" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
