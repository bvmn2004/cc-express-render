<section class="py-8 max-w-4xl mx-auto">
  <a href="/blogs" class="text-sm uppercase tracking-wide text-gray-500 hover:text-black">‚Üê Back to the list</a>
  <div class="mt-6">
    <p class="text-xs tracking-[0.4em] text-gray-400 uppercase">{{blog.product_name}}</p>
    <h1 class="text-4xl font-semibold mt-2 mb-4">{{blog.title}}</h1>
    <p class="text-sm text-gray-500">Posted date: {{blog.created_at}}</p>
  </div>

  {{#if blog.product_slug}}
  <div class="mt-6 rounded-xl overflow-hidden shadow-lg">
    <a href="/product/{{blog.product_slug}}" class="relative w-full bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-800 dark:to-neutral-900 p-12 flex items-center justify-center min-h-[400px] cursor-pointer block">
      <img 
        src="{{#if blog.product_image_url}}{{blog.product_image_url}}{{else}}https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1000&q=80{{/if}}" 
        alt="{{blog.product_name}}" 
        class="max-h-[360px] w-auto object-contain hover:scale-105 transition-transform duration-300" 
      />
    </a>
  </div>
  {{else}}
  <div class="mt-6 rounded-xl overflow-hidden shadow-lg">
    <div class="relative w-full bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-800 dark:to-neutral-900 p-12 flex items-center justify-center min-h-[400px]">
      <img 
        src="{{#if blog.product_image_url}}{{blog.product_image_url}}{{else}}https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1000&q=80{{/if}}" 
        alt="{{blog.product_name}}" 
        class="max-h-[360px] w-auto object-contain" 
      />
    </div>
  </div>
  {{/if}}
  <div class="mt-8 prose lg:prose-lg dark:prose-invert max-w-none">
    <style>
      .prose p, .prose li {
        font-family: inherit;
      }
      .prose strong {
        font-weight: 600;
      }
    </style>
    {{{blog.content}}}
  </div>
  {{#if blog.product_slug}}
  <div class="mt-10 p-6 border rounded-lg flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div>
      <p class="text-sm uppercase tracking-wide text-gray-400">Products mentioned</p>
      <h3 class="text-2xl font-semibold">{{blog.product_name}}</h3>
    </div>
    <a href="/product/{{blog.product_slug}}" class="bg-blue-600 text-white px-6 py-3 uppercase tracking-widest text-sm">View products</a>
  </div>
  {{/if}}
</section>
