{{#if error}}
	<div class="auth-error">{{error}}</div>
{{/if}}
<div class="form-wrap">
	<form method="POST" action="/auth/login" class="auth-form">
		<div class="form-row">
			<input class="form-input" type="email" name="email" required placeholder="Username or email" />
		</div>
		<div class="form-row">
			<input class="form-input" type="password" name="password" required placeholder="Password" />
		</div>
		<div class="row-between">
			<label class="checkbox-label"><input type="checkbox" name="remember"/> Remember me</label>
			<a class="forgot-link" href="#">Forgot?</a>
		</div>
		<div class="form-row form-actions">
			<button type="submit" class="btn-primary">Login</button>
		</div>
	</form>
	<div class="auth-footer">Don't have an account? <a href="/auth/register">Register</a></div>
</div>