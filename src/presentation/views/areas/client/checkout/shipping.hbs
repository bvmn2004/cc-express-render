<div class="container mx-auto p-4 md:p-8">
    <div class="mb-6 flex flex-col gap-4 md:gap-5">
        <h1 class="text-2xl font-bold">Checkout</h1>
        <nav class="flex items-center gap-1"><a
                class="text-sm text-gray-400 hover:text-gray-300 underline underline-offset-2 cursor-pointer"
                href="/checkout/information">Information</a><svg xmlns="http://www.w3.org/2000/svg" width="24"
                height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-chevron-right text-gray-400 h-4 w-4">
                <path d="m9 18 6-6-6-6"></path>
            </svg><span class="text-sm font-medium">Shipping Method</span><svg xmlns="http://www.w3.org/2000/svg"
                width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round"
                class="lucide lucide-chevron-right text-gray-400 h-4 w-4">
                <path d="m9 18 6-6-6-6"></path>
            </svg><span class="text-sm text-gray-400 pointer-events-none">Payment</span></nav>
    </div>
    <div class="grid gap-8 md:grid-cols-2 items-start">
        <div class="flex flex-col gap-6">
            <div class="md:hidden">
                <div data-state="closed" data-slot="collapsible"
                    class="rounded-lg border border-neutral-200 bg-white text-neutral-950 shadow-sm dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-50">
                    <button type="button" aria-controls="radix-«Rmnndb»" aria-expanded="false" data-state="closed"
                        data-slot="collapsible-trigger"
                        class="group flex w-full items-center justify-between p-4 text-left">
                        <div class="flex items-center gap-2"><svg xmlns="http://www.w3.org/2000/svg" width="24"
                                height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                stroke-linecap="round" stroke-linejoin="round"
                                class="lucide lucide-chevron-down h-5 w-5 group-data-[state=open]:hidden">
                                <path d="m6 9 6 6 6-6"></path>
                            </svg><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-chevron-up h-5 w-5 group-data-[state=closed]:hidden">
                                <path d="m18 15-6-6-6 6"></path>
                            </svg><span class="font-medium">Order Summary</span></div>
                        <p class="font-semibold">$519.75<span class="ml-1 inline sr-only">USD</span></p>
                    </button>
                    <div data-state="closed" id="radix-«Rmnndb»" hidden="" data-slot="collapsible-content"
                        class="p-6  pt-0 data-[state=closed]:animate-collapsible-up data-[state=open]:animate-collapsible-down"
                        style=""></div>
                </div>
            </div><!--$--><!--/$-->
            <div class="space-y-6 md:space-y-8">
                <div
                    class="rounded-lg border border-neutral-200 bg-white text-neutral-950 shadow-sm dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-50">
                    <div class="p-6 flex flex-col gap-4">
                        <div class="flex gap-2">
                            <div class="flex flex-grow">
                                <div class="w-22 flex-shrink-0">
                                    <p class="text-sm text-neutral-500">Contact</p>
                                </div>
                                <div class="text-sm">{{checkoutInfo.email}}</div>
                            </div><a class="text-sm text-blue-600 hover:text-blue-700"
                                href="/checkout/information">Edit</a>
                        </div>
                        <div data-orientation="horizontal" role="none"
                            class="shrink-0 bg-neutral-200 dark:bg-neutral-800 h-[1px] w-full"></div>
                        <div class="flex gap-2">
                            <div class="flex flex-grow">
                                <div class="w-22 flex-shrink-0">
                                    <p class="text-sm text-neutral-500">Ship to</p>
                                </div>
                                <div class="text-sm">{{formattedAddress}}
                                </div>
                            </div><a class="text-sm text-blue-600 hover:text-blue-700"
                                href="/checkout/information">Edit</a>
                        </div>
                    </div>
                </div>
                <form action="/checkout/shipping" method="POST" class="space-y-6 md:space-y-8">
                    <div
                        class="rounded-lg border border-neutral-200 bg-white text-neutral-950 shadow-sm dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-50">
                        <div class="flex flex-col space-y-1.5 p-6">
                            <h3 class="text-2xl font-semibold leading-none tracking-tight">Shipping Method</h3>
                        </div>
                        <div class="p-6 pt-0">
                            <div role="radiogroup" class="flex flex-col gap-5">
                                {{#each shippingMethods}}
                                <label class="cursor-pointer">
                                    <div class="flex justify-between">
                                        <div class="flex gap-3">
                                            <div class="h-6 flex items-center justify-center">
                                                <input type="radio" value="{{@key}}" name="shippingMethodId"
                                                    class="h-4 w-4 rounded-full border border-primary text-primary focus:ring-2 focus:ring-primary"
                                                    {{#if (eq ../selectedShippingMethod @key)}}checked{{/if}} required>
                                            </div>
                                            <div>
                                                <p class="font-medium">{{this.name}}</p>
                                                <p class="text-sm text-gray-500">
                                                    {{#if (eq @key "001")}}Order received within 7-10 business days{{/if}}
                                                    {{#if (eq @key "002")}}Order received in 2 business days{{/if}}
                                                    {{#if (eq @key "003")}}Order received the next business day{{/if}}
                                                    {{#if (eq @key "005")}}Store Pickup{{/if}}
                                                </p>
                                            </div>
                                        </div>
                                        <span class="font-medium">
                                            <p>${{formatCurrency this.price}}<span class="ml-1 inline">USD</span></p>
                                        </span>
                                    </div>
                                </label>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <button
                        class="block w-full rounded-full bg-blue-600 p-3 text-center text-sm font-medium text-white opacity-90 hover:opacity-100"
                        type="submit" aria-label="Continue to Payment">Continue to Payment</button>
                </form>
            </div>
        </div>
        <div class="hidden md:block">
            <div
                class="rounded-lg border border-neutral-200 bg-white text-neutral-950 shadow-sm dark:border-neutral-800 dark:bg-neutral-950 dark:text-neutral-50">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="text-2xl font-semibold leading-none tracking-tight">Order Summary</h3>
                </div>
                <div class="p-6 pt-0">
                    <div class="space-y-4">
                        {{#each cart}}
                        <div class="flex items-center space-x-4">
                            <img src="{{this.image_url}}" alt="{{this.name}}" class="rounded-md object-cover" width="80" height="80">
                            <div class="flex-grow">
                                <h3 class="font-semibold">{{this.name}}</h3>
                                <div class="mt-1 text-sm text-gray-500">
                                    <div>Price: ${{this.price}}</div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="font-semibold">
                                    <p>${{multiply this.price this.qty}}<span class="ml-1 inline">USD</span></p>
                                </div>
                                <div class="text-sm text-gray-500">Qty: {{this.qty}}</div>
                            </div>
                        </div>
                        <div class="shrink-0 bg-neutral-200 dark:bg-neutral-800 h-[1px] w-full"></div>
                        {{/each}}
                        <div class="flex justify-between"><span>Taxes</span>
                            <p>$0.00<span class="ml-1 inline">USD</span></p>
                        </div>
                        <div class="flex justify-between"><span>Subtotal</span>
                            <p>${{formatCurrency total}}<span class="ml-1 inline">USD</span></p>
                        </div>
                        <div class="flex justify-between"><span>Shipping</span>
                            <p>$0.00<span class="ml-1 inline">USD</span></p>
                        </div>
                        <div class="flex justify-between font-bold"><span>Total</span>
                            <p>${{formatCurrency total}}<span class="ml-1 inline">USD</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>